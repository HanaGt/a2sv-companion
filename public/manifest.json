{
  "manifest_version": 3,
  "name": "My Coding Companion",
  "description": "Personal coding companion for tracking solutions",
  "version": "1.0",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "My Coding Companion",
    "default_icon": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "services.js"
  },
  "content_scripts": [
    {
      "js": ["auth.content.js"],
      "matches": ["https://YOUR_BACKEND_URL/*"],
      "run_at": "document_idle"
    },
    {
      "js": ["leetcode.content.js"],
      "matches": ["https://leetcode.com/*"],
      "run_at": "document_idle"
    },

    {
      "js": ["codeforces.content.js"],
      "matches": ["https://codeforces.com/problemset/status*"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "sidePanel",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*",
    "https://YOUR_BACKEND_URL/*",
    "https://leetcode.com/*",
    "http://localhost:5000/*"
  ]
}
